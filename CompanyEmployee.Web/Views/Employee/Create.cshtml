@model CreateEmployee

<h2>@ViewData["Success"]</h2>

<h2>Add Employee</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Experience"></label>
                <select asp-for="Experience" asp-items="Html.GetEnumSelectList<Experience>()" class="form-control"></select>
                <span asp-validation-for="Experience" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartingDate"></label>
                <input asp-for="StartingDate" class="form-control" />
                <span asp-validation-for="StartingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VacationDays"></label>
                <input asp-for="VacationDays" class="form-control" type="number" min="1" />
                <span asp-validation-for="VacationDays" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="CompanyId" />

            <button type="submit" class="btn btn-primary btn-md">Create</button>
        </form>
    </div>
</div>